<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.extraslice.walknpay"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
-
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@style/myTheme" >
-
        <activity
            android:name="com.extraslice.walknpay.ui.SplashScreen"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen" >
-
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.extraslice.walknpay.ui.MenuActivity"
            android:configChanges="orientation|screenSize|keyboardHidden" >
        </activity>
        <activity
            android:name="com.extraslice.walknpay.ui.RegisterScreen"
            android:configChanges="orientation|screenSize|keyboardHidden" >
        </activity>
        <activity
            android:name="com.extraslice.walknpay.ui.HomeTab"
            android:configChanges="orientation|screenSize|keyboardHidden" >
        </activity>
        <activity
            android:name="com.extraslice.walknpay.ui.CartTab"
            android:configChanges="orientation|screenSize|keyboardHidden" >
        </activity>
        <activity
            android:name="com.extraslice.walknpay.ui.LoginScreen"
            android:configChanges="orientation|screenSize|keyboardHidden" >
        </activity>
        <activity
            android:name="com.extraslice.walknpay.ui.ConfirmationScreen"
            android:configChanges="orientation|screenSize|keyboardHidden" >
        </activity>
        <activity
            android:name="com.extraslice.walknpay.ui.WalletTab"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:windowSoftInputMode="adjustPan|adjustResize" >
        </activity>
        <activity
            android:name="com.extraslice.walknpay.ui.RewardsTab"
            android:configChanges="orientation|screenSize|keyboardHidden" >
        </activity>
        <activity
            android:name="com.extraslice.walknpay.ui.PaymentScreen"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:noHistory="true" >
        </activity>
        <activity
            android:name="jim.h.common.android.zxinglib.CaptureActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ui.Forgot"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name=".ui.Associate"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name=".ui.CreditCardDetail"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name=".ui.EditCreditCardDetail"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name=".ui.ReceiptClass"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity android:name=".ui.PopupActivity" android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"></activity>
    </application>

</manifest>