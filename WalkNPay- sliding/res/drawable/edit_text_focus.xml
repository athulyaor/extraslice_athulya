<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <gradient android:angle="270" android:centerColor="#00000000" android:centerX="0.5" android:centerY="0.5" android:endColor="#00000000" android:startColor="#00000000" />

            <stroke android:width="2dp" android:color="#505898BB" />

            <corners android:radius="7dp" />

            <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="6dp" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:centerColor="#60000000" android:centerX="0.5" android:centerY="0.5" android:endColor="#90000000" android:startColor="#40000000" />

            <stroke android:width="5dp" android:color="#505898BB" />

            <corners android:radius="7dp" />

            <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="6dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:centerColor="#60FFFFFF" android:centerX="0.5" android:centerY="0.5" android:endColor="#90FFFFFF" android:startColor="#40FFFFFF" />

            <stroke android:width="2dp" android:color="#50000000" />

            <corners android:radius="7dp" />

            <padding android:bottom="6dp" android:left="10dp" android:right="10dp" android:top="6dp" />
        </shape></item>

</selector>