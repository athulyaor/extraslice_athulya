<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_third_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/storelayout"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/theme_main_color"
        android:visibility="visible" >

        <Button
            android:id="@+id/buttonYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView1"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="26dp"
            android:background="@color/white"
            android:text="Yes"
            android:textColor="@color/text_blue"
            android:textSize="15dp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/buttonNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/buttonYes"
            android:layout_alignBottom="@+id/buttonYes"
            android:layout_alignRight="@+id/textView1"
            android:layout_marginRight="31dp"
            android:background="@color/white"
            android:text="No"
            android:textColor="@color/text_blue"
            android:textSize="15dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="18dp"
            android:gravity="center_vertical"
            android:text="Hi, You are in ABC store . Please confirm you are in the right store by clicking the button below."
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="italic" />
    </RelativeLayout>

    <!--
         <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relativeLayout1"
        android:layout_alignTop="@+id/tableLayout1"
        android:text="Logged in at"
        android:textColor="@color/text_blue"
        android:textSize="16dp"
        android:textStyle="italic" />
    -->

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="20dp" >

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:text="Time"
                android:textColor="@color/text_blue"
                android:textSize="12dp"
                android:textStyle="italic" />

            <TextView
                android:text=":"
                android:textColor="@color/text_blue"
                android:textSize="12dp"
                android:textStyle="italic" />

            <TextView
                android:text="UTC-22:00"
                android:textColor="@color/text_blue"
                android:textSize="12dp"
                android:textStyle="italic" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:text="Date"
                android:textColor="@color/text_blue"
                android:textSize="12dp"
                android:textStyle="italic" />

            <TextView
                android:text=":"
                android:textColor="@color/text_blue"
                android:textSize="12dp"
                android:textStyle="italic" />

            <TextView
                android:text="23-09-2013"
                android:textColor="@color/text_blue"
                android:textSize="12dp"
                android:textStyle="italic" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/tableLayout1"
        android:layout_marginLeft="20dp"
        android:text="Logged in at"
        android:textColor="@color/text_blue"
        android:textSize="16dp"
        android:textStyle="italic" />

    <!--
         <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:src="@drawable/logo_old" />
    -->

   

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Welcome Sam Hunter"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/text_blue"
        android:textSize="20dp"
        android:textStyle="italic" />
    

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerInParent="true"
       
        android:layout_marginTop="160dp" >

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/othertext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thank you for choosing "
                android:textColor="@color/text_blue"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/storename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABC STORE"
                android:textColor="#FF0000"
                android:textSize="16dp"
                android:layout_weight="1"
                android:textStyle="bold" />
            <ImageButton 
                android:background="@drawable/cross1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginTop="5dp"
                android:id="@+id/cross"/>
        </LinearLayout>

        <TextView
            android:id="@+id/restmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linear1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            android:text="Please seek the help of our store associate in case of any enquiries and questions"
            android:textColor="@color/text_blue"
            android:textSize="16dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageassociate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:src="@drawable/associate40" />
    <ImageView
        android:id="@+id/imagearrow"
        android:layout_width="wrap_content"
        android:layout_below="@+id/imageassociate"
        android:visibility="gone"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/arrow_up" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeLayout1"
        android:layout_alignRight="@+id/tableLayout1"
        android:src="@drawable/dot" />

</RelativeLayout>