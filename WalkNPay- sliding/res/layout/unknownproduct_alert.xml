<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
       
        android:background="@color/theme_third_color" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:id="@+id/view1"
            android:layout_below="@+id/alertTitle"
            android:layout_marginTop="15dp"
            android:background="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:scaleType="fitXY"
            android:src="@android:drawable/divider_horizontal_dark" />

        <!-- <Button
            android:id="@+id/alertnegativebutton"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/alertpositivebutton"
            android:layout_alignBottom="@+id/alertpositivebutton"
            android:layout_alignParentRight="true"
            android:layout_marginRight="31dp"
            android:layout_weight="1"
            android:background="@color/theme_main_color"
            android:text="No"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" /> -->

        <!--
            <View
              android:layout_width="fill_parent"
              android:layout_height="1dp"
              android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
              android:background="@android:color/darker_gray" />
        -->

        <TextView
            android:id="@+id/alertTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="UNKNOWN PRODUCT"
            android:textColor="@color/text_blue"
            android:textSize="18dp"
            android:textStyle="bold" />
         <TextView
            android:id="@+id/alertmesg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="@string/unknown_product"
            android:textColor="@color/text_blue"
            android:textSize="18dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/alertpositivebutton"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_below="@+id/alertmesg"
            android:layout_centerHorizontal="true"
            android:background="@color/theme_main_color"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>