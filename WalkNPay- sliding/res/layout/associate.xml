<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_third_color"
    android:orientation="vertical" >

    <Button
        android:id="@+id/login"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="125dp"
        android:background="@color/theme_main_color"
        android:text="Login"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/associate_id"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_above="@+id/retail_id"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_grey"
        android:ems="10"
        android:hint="AssociateID"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="#707070"
        android:textSize="16sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/retail_id"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_above="@+id/store_id"
        android:layout_alignLeft="@+id/associate_id"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_grey"
        android:ems="10"
        android:hint="RetailerID"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="#707070"
        android:textSize="16sp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/store_id"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/retail_id"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_grey"
        android:ems="10"
        android:hint="StoreID"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="#707070"
        android:textSize="16sp"
        android:textStyle="normal" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:gravity="center_horizontal"
        android:text="Welcome to Associate mode"
        android:textColor="@color/text_blue"
        android:textSize="18sp"
        />

</RelativeLayout>